{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "redeploy",
            "type": "shell",
            "command": "mvn clean package cargo:redeploy",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "mvn clean package cargo:deploy",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Start Tomcat (Debug mode)",
            "type": "shell",
            "command": "${env:CATALINA_HOME}\\bin\\catalina.bat jpda start", // Windowsの場合
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Stop Tomcat",
            "type": "shell",
            "command": "${env:CATALINA_HOME}\\bin\\catalina.bat stop", // Windowsの場合
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}